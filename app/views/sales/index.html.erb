<div class="label">
	<span><%= @title %></span>
</div>

<input type="text" id="search" placeholder="Buscar" style="float: left;">

<%= form_tag sales_filter_date_path, method: :get do %>
	<div class="nav-right">
		<span>
			<%= hidden_field_tag :category, @sales.first.category %>
			<%= date_field_tag :begin_date, @begin_date %>
			<%= date_field_tag :end_date, @end_date %>
			<%= button_to 'Filtrar', nil, class: 'btn btn-success' %>
		</span>
	</div>	
<% end %>

<%= render 'sales' %>