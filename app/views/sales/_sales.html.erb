<table class="table table-bordered">
	<thead>
		<th>Venda</th>
		<th>Data</th>
		<th>Cliente</th>
		<th>Vendedor</th>
		<th>Total</th>
		<% unless @sales.empty? %>
			<% if @sales.first.category == 'service' %>
				<th>Status</th>
			<% end %>
		<% end %>
	</thead>
	<% @total = 0 %>
	<% @sales.each do |sale| %>
	<tbody id="table">
		<tr>
			<td><%= sale.id %></td>
			<td><%= sale.created_at.strftime("%d/%m/%Y") %></td>
			<td><%= sale.client.name %></td>
			<td><%= sale.user.email %></td>
			<td><%= number_to_currency sale.total %></td>
			<% unless @sales.empty? %>
				<% if sale.category == 'service' %>
					<td><%= sale.status %></td>
				<% end %>
			<% end %>
			<% if @report != true %>
				<td class="options-btn">
					<%= link_to sale_path(sale) do %>
						<i class="fa fa-eye btn-icon"></i>
					<% end %>
				</td>
			<% end %>
			<% @total += sale.total %>
		</tr>
	</tbody>
	<% end %>
</table>

<div class="navbar navbar-right">
	<%= label_tag :total %>
	<%= text_field_tag :total, number_to_currency(@total), :disabled=>true %>
</div>
