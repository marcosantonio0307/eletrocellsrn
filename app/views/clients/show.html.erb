<div class="options">
	<span>
		<%= link_to clients_path do %>
			<i class="fa fa-arrow-left btn-icon"></i>
		<% end %>
	</span>	
</div>

<%= form_for @client do |f| %>
<div class="form-new">
	<div class="form-group">
		<%= f.label :nome %>
		<%= f.text_field :name, class: "form-control", :disabled=>true %>
	</div>

	<div class="form-group">
		<%= f.label "CPF/RG" %>
		<%= f.text_field :cpf, class: "form-control", :disabled=>true %>
	</div>

	<div class="form-group">
		<%= f.label :telefone %>
		<%= f.text_field :fone, class: "form-control", :disabled=>true %>
	</div>

	<div class="form-group">
		<%= f.label :endereco %>
		<%= f.text_field :address, class: "form-control", :disabled=>true %>
	</div>

	<div class="form-group">
		<%= f.label :bairro %>
		<%= f.text_field :district, class: "form-control", :disabled=>true %>
	</div>

	<div class="form-group">
		<%= f.label :cidade %>
		<%= f.text_field :city, class: "form-control", :disabled=>true %>
	</div>
	
</div>
<% end %>