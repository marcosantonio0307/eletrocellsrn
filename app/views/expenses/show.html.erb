<div class="options">
	<% if admin?(current_user) %>
		<%= link_to edit_expense_path(@expense) do %>
			<i class="fa fa-edit btn-icon"></i>
		<% end %>
		<%= link_to expense_path(@expense), method: :delete, data:{confirm: 'ExcluÃ­r esta despesa?'} do %>
			<i class="fa fa-close btn-icon"></i>
		<% end %>
	<% end %>
</div>

<div class="form-new">
	<%= form_for @expense do |f| %>

		<div class="form-group">
			<%= label_tag :data %>
			<%= text_field_tag :created_at, @expense.created_at.strftime("%d/%m/%Y"), class: 'form-control', :disabled=>true %>
		</div>

		<div class="form-group">
			<%= f.label :descricao %>
			<%= f.text_field :description, class: 'form-control', :disabled=>true %>
		</div>

		<div class="form-group">
			<%= f.label :valor %>
			<%= f.text_field :total, class: 'form-control', :disabled=>true %>
		</div>

		<div class="form-group">
			<%= f.label :tipo %>
			<%= f.text_field :category, class: 'form-control', :disabled=>true %>	
		</div>
	<% end %>
</div>