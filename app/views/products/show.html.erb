<div class="options">
	<span>
		<%= link_to products_path do %>
			<i class="fa fa-arrow-left btn-icon"></i>
		<% end %>
		<% if admin?(current_user) %>
			<%= link_to add_product_path(@product) do %>
				<i class="fa fa-plus btn-icon"></i>
			<% end %>
			<%= link_to edit_product_path(@product) do %>
				<i class="fa fa-edit btn-icon"></i>
			<% end %>
			<%= link_to product_path(@product), method: :delete, data:{confirm: "Deja Excluir o Produto: #{@product.name}"} do %>
				<i class="fa fa-trash btn-icon"></i>
			<% end %>
		<% end %>
	</span>
</div>


<%= form_for @product do |f| %>

	<div class="form-new">
		<div class="form-group">
			<%= f.label :sku %>
			<%= f.text_field :sku, class: 'form-control', :disabled=>true %>
		</div>

		<div class="form-group">
			<%= f.label :nome %>
			<%= f.text_field :name, class: 'form-control', :disabled=>true %>
		</div>

		<div class="form-group">
			<%= f.label :quantidade %>
			<%= f.text_field :amount, class: 'form-control', :disabled=>true %>
		</div>

		<% if admin?(current_user) %>
			<div class="form-group">
				<%= f.label :custo %>
				<%= f.text_field :cost, class: 'form-control', :disabled=>true %>
			</div>
		<% end %>

		<div class="form-group">
			<%= f.label :preco %>
			<%= f.text_field :price, class: 'form-control', :disabled=>true %>
		</div>

		<div class="form-group">
			<%= f.label :tipo %>
			<%= f.text_field :category, class: 'form-control', :disabled=>true %>
		</div>

	</div>
<% end %>